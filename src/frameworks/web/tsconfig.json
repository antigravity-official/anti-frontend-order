{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@adapters/*": [
        "../../adapters/*"
      ],
      "@domains/*": [
        "../../domains/*"
      ],
      "@frameworks/*": [
        "../../frameworks/*"
      ],
      "@hooks/*": [
        "../../frameworks/web/hooks/*"
      ],
      "@di": [
        "./di/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "webpack.config.js"
  ]
}
